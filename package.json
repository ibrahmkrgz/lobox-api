{
  "name": "@lobox/api",
  "version": "1.0.0",
  "description": "lobox app api repository",
  "author": "İbrahim Karagöz<ibrahm.krgz@gmail.com>",
  "license": "MIT",
  "keywords": [
    "lobox",
    "api",
    "nest",
    "apollo",
    "graphql"
  ],
  "bugs": {
    "url": "https://github.com/ibrahmkrgz/lobox-api.git/issues"
  },
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/ibrahmkrgz/lobox-api.git"
  },
  "homepage": "https://github.com/ibrahmkrgz/lobox-api.git",
  "engines": {},
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prestart": "rimraf dist",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@nestjs/common": "^7.4.3",
    "@nestjs/core": "^7.4.3",
    "@nestjs/graphql": "^7.6.0",
    "@nestjs/platform-express": "^7.4.3",
    "apollo-server": "^2.17.0",
    "apollo-server-express": "^2.17.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "graphql": "^15.3.0",
    "graphql-subscriptions": "^1.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.1",
    "@types/express": "^4.17.7",
    "@types/node": "^14.6.2",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "prettier": "^2.1.1",
    "ts-loader": "^8.0.3",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}